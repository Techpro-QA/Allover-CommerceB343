<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite">
    <listeners>
        <listener class-name="utilities.ExtentReportsListener"></listener>
    </listeners>
    <test verbose="2" preserve-order="true"
          name="US_11_Vendor Authentication And Dashboard Test">
        <classes>
            <class name="Tests.US_11.VendorAuthenticationTests">
                <methods>
                    <include name="testVendorSuccessfulLogin"/>
                    <include name="testLogin_Validation_InvalidEmailFormat"/>
                    <include name="testLogin_Validation_InvalidEmail"/>
                    <include name="testLogin_Validation_InvalidPassword"/>
                    <include name="testLogin_Validation_EmptyEmail"/>
                    <include name="testLogin_Validation_EmptyPassword"/>
                </methods>
            </class>
            <class name="Tests.US_11.VendorDashboardNavigationTests">
                <methods>
                    <include name="testDashboardMenusVisibility"/>
                    <include name="testStoreManagerMenu"/>
                    <include name="testOrdersMenu"/>
                    <include name="testDownloadsMenu"/>
                    <include name="testAddressMenu"/>
                    <include name="testAccountDetailsMenu"/>
                    <include name="testWishlistMenu"/>
                    <include name="testSupportTicketsMenu"/>
                    <include name="testFollowingsMenu"/>
                    <include name="testLogoutButton"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>